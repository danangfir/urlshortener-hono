{
    "compilerOptions": {
      "lib": ["DOM", "ES2017"],
      "target": "ES6",
      "module": "ESNext",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
  }
  